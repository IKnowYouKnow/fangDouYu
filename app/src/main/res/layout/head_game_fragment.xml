<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/banner_head"
        android:layout_width="match_parent"
        android:background="@color/colorwhite"
        android:layout_height="210dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/banner_category_viewPager"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <com.cokus.fangdouyu.widget.viewpagerindicator.view.indicator.FixedIndicatorView
            android:padding="10dp"
            android:layout_below="@id/banner_category_viewPager"
            android:id="@+id/banner_category_indicator"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>
