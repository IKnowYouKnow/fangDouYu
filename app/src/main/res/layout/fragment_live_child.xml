<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
    <com.cokus.fangdouyu.widget.viewpagerindicator.view.indicator.ScrollIndicatorView
        android:id="@+id/live_indicator"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorwhite"
            >
            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/type_left"/>

            <ImageView
                android:id="@+id/select_type_img"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/open_checktype"
                />
            </RelativeLayout>
    </LinearLayout>
    <com.cokus.fangdouyu.widget.viewpagerindicator.view.viewpager.SViewPager
        android:id="@+id/live_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
